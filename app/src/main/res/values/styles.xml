<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/prime_green</item>
    </style>

    <style name="FullscreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/prime_green</item>
    </style>

    <style name="PrimeStationOneControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/prime_orange</item>
        <item name="android:textColor">@color/prime_charcoal</item>
        <item name="android:layout_marginBottom">@dimen/primestation_command_button_spacing</item>
        <!--<item name="android:padding">@dimen/abc_action_bar_default_padding_material</item>-->
    </style>

    <style name="statusConsoleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@color/prime_green</item>
        <item name="android:typeface">monospace</item>
        <!--<item name="android:padding">@dimen/abc_action_bar_default_padding_material</item>-->
    </style>

    <style name="statusConsoleScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

</resources>
